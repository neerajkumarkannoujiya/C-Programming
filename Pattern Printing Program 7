 Pattern Printing Programs(7)
 
 
 
 #include<stdio.h>
void main()
{
    int i,j,n,space;
    printf("enter the number of rows:");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(space=1;space<=(n-i);space++)
        {
            printf(" ");
        }
        for(j=1;j<=2*i-1;j++)
        {
            printf("*");
        }
        printf("\n");
    }
}

